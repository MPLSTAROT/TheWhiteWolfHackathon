<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jak się teraz czujesz?" />


        <CheckBox
            android:id="@+id/checkBoxExcited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podekscytowanie"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarExcited"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textExcitedNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center_horizontal"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxBored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Znudzenie"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarBored"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textBoredNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxNervous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zdenerwowanie/Zestresowanie"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarNervous"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textNervousNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxTired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmęczenie"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarTired"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textTiredNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxAnxiety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Niepokój/Strach"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarAnxiety"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textAnxietyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxFrustrated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frustracja/Poirytowanie/Złość"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarFrustrated"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textFrustratedNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Szczęście"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarHappy"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textHappyNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxSad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smutek/Samotność"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarSad"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textSadNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <CheckBox
            android:id="@+id/checkBoxCalm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spokój"
            android:onClick="onCheckboxClicked"/>

        <SeekBar
            android:id="@+id/seekBarCalm"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1" />

        <TextView
            android:id="@+id/textCalmNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarExcited"
            android:gravity="center"
            android:text="1/5" />


        <EditText
            android:id="@+id/EditTextFeedbackBody"
            android:layout_height="wrap_content"
            android:hint="Komentarz"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent">
        </EditText>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz" />


    </LinearLayout>
</ScrollView>